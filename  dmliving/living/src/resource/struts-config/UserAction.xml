<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="com.living.action.UserAction" extends="struts-default" namespace="/user">
	
		<action name="login" class="com.living.action.UserAction" method="login">
			<result type="redirect">/index.jsp</result>
			<result name="error">/loginOrRegister.jsp</result>
		</action>
		
		<action name="register" class="com.living.action.UserAction" method="register">
			<interceptor-ref name="token"/>
			<interceptor-ref name="params"/>
			<result type="redirect-action">login</result>
			<result name="error">/loginOrRegister.jsp</result>
			<result name="invalid.token" type="redirect">/errorPages/expire.jsp</result>
		</action>
		
		<action name="loginOrRegister" class="com.living.action.UserAction" method="loginOrRegister">
			<result>/loginOrRegister.jsp</result>
		</action>
		
	</package>
</struts>