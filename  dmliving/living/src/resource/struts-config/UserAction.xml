<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="com.living.action.UserAction" extends="default" namespace="/user">
	
		<action name="login" class="com.living.action.UserAction" method="login">
			<result name="error">/user/login.jsp</result>
			<result name="input">/user/login.jsp</result>
			<result type="redirect">${goingToURL}</result>
			<interceptor-ref name="defaultStack"/>
		</action>
		
		<action name="register" class="com.living.action.UserAction" method="register">
			<interceptor-ref name="token"/>
			<interceptor-ref name="params"/>
			<result>/user/createAccountSuccess.jsp</result>
			<result name="input">/user/register.jsp</result>
			<result name="invalid.token">/errorPages/invalidToken.jsp</result>
			<interceptor-ref name="defaultStack"/>
		</action>
		
		<action name="createAccount" class="com.living.action.UserAction" method="createAccount">
			<result>/user/register.jsp</result>
			<interceptor-ref name="defaultStack"/>
		</action>
		
		<action name="myAccount" class="com.living.action.UserAction" method="myAccount">
			<result>/user/myAccount.jsp</result>
		</action>
		
		<action name="viewAccount" class="com.living.action.UserAction" method="accountInformation">
			<result>/user/accountInfomation.jsp</result>
		</action>
		
		<action name="updateAccount" class="com.living.action.UserAction" method="updateAccount">
			<result>/user/myAccount.jsp</result>
		</action>
		
		<action name="showPrimaryAdress" class="com.living.action.UserAction" method="myAccount">
			<result>/user/addressBookUpdate.jsp</result>
		</action>
		<action name="updatePrimaryAddress" class="com.living.action.UserAction" method="updateAccount">
			<result>/user/addressBook.jsp</result>
		</action>
		
		
		<action name="logout" class="com.living.action.UserAction" method="logoff">
			<result>/user/logoff.jsp</result>
			<interceptor-ref name="defaultStack"/>
		</action>
		
		<action name="changePasswordPage" class="com.living.action.UserAction" method="changepswPage">
			<result>/user/changePassword.jsp</result>
		</action>
		
		<action name="changePassword" class="com.living.action.UserAction" method="changePassword">
			<result>/user/myAccount.jsp</result>
			<result name="input">/user/changePassword.jsp</result>
		</action>
		
		<action name="findPassword" class="com.living.action.UserAction" method="findPassword">
			<result>/user/login.jsp</result>
			<result name="input">/user/forgetPassword.jsp</result>
			<interceptor-ref name="defaultStack"/>
		</action>
		
	</package>
	
	<package name="com.living.action.AdminAction" extends="default" namespace="/admin">
		<action name="adminLogin" class="com.living.action.UserAction" method="adminLogin">
			<result type="redirect">${goingToURL}</result>
			<result name="input">/admin/login.jsp</result>
			<interceptor-ref name="defaultStack"/>
		</action>
	</package>
</struts>