<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="com.living.action.ProductAction" extends="default" namespace="/admin/product">
	
		<action name="newProduct" class="com.living.action.ProductAction" method="newProduct">
			<result>/admin/productEdit.jsp</result>
		</action>
		
		<action name="showProduct" class="com.living.action.ProductAction" method="showProduct">
			<result>/admin/productEdit.jsp</result>
		</action>
		
		<action name="deleteProduct" class="com.living.action.ProductAction" method="deleteProduct">
			<result type="redirect">/admin/category/categoryList.action</result>
		</action>
		
	</package>
	
	<package name="com.living.action.ProductAction2" extends="default" namespace="/product">
	
		<action name="searchProduct" class="com.living.action.ProductAction" method="searchProduct">
			<result>/product/searchResults.jsp</result>
			<interceptor-ref name="defaultStack"/>
		</action>
		
		<action name="showProduct" class="com.living.action.ProductAction" method="showProduct">
			<result>/product/productShow.jsp</result>
			<interceptor-ref name="defaultStack"/>
		</action>
		
		<action name="listProduct" class="com.living.action.ProductAction" method="listProduct">
			<result>/product/productList.jsp</result>
			<interceptor-ref name="defaultStack"/>
		</action>
		
	</package>
</struts>